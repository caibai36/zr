# First install ABX tools with branch zerospeech 2015
# then prepare ABX test for timit
(base) [bin-wu@ahccsclm02 test]$ timitdir=../../../../../zr/egs/timit/s0
(base) [bin-wu@ahccsclm02 test]$ midir -p tools/abx
(base) [bin-wu@ahccsclm02 test]$ cd tools/abx

# https://github.com/caibai36/zr15.git
(base) [bin-wu@ahccsclm02 abx]$ cp $timitdir/local/zerospeech2015.zip .
(base) [bin-wu@ahccsclm02 abx]$ unzip zerospeech2015.zip
(base) [bin-wu@ahccsclm02 abx]$ cd ABXpy-zerospeech2015/

(base) [bin-wu@ahccsclm02 ABXpy-zerospeech2015]$ git init && git add . && git commit -m "init state"
(base) [bin-wu@ahccsclm02 ABXpy-zerospeech2015]$ cp $timitdir/local/{timit_eval1.py,prepare_eval1.py} bin/
(base) [bin-wu@ahccsclm02 ABXpy-zerospeech2015]$ cp $timitdir/local/timit_eval.cfg $timitdir/data/test_time/timit.item resources/
(base) [bin-wu@ahccsclm02 ABXpy-zerospeech2015]$ source activate zr15 # assume abx tools already installed
(zr15) [bin-wu@ahccsclm02 ABXpy-zerospeech2015]$ python bin/prepare_eval1.py -c timit

